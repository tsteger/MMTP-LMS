@model MMTP_LMS.ViewModels.UserInputViewModel
@{

}

<div id="todays_header" class="thestyle">
    <span>Teachers overview</span>

    <div class="col-2">
        <div class="col-sm-12">
          
        </div>
    </div>
</div>



<div class="container-fluid">
    <div id="createcourse_group" class="thestyle">
        <button type="button" class="btn btn-success" onclick="window.location.href = '/Teacher/Teacher';">Courses</button>
        @*<button type="button" class="btn btn-success" onclick="window.location.href = '/Module/CreateModule/1';">Modules</button>
        <button type="button" class="btn btn-success" onclick="window.location.href = '/LmsActivities/CreateLmsActivity/1';">Activities</button>*@
        <a class="btn btn-success crtstudent_btn" data-toggle="collapse" href="#collapseForm" role="button" aria-expanded="true" aria-controls="collapseForm">Show Student form</a>
        <div class="row">
            <div class="col">
                <div class="collapse multi-collapse" id="collapseForm">
                    <div class="card card-body">
                        <div class="row">
                            <div class="flex-xl-grow-1">
                                <form asp-action="CreateUser" asp-controller="Users" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="row col-sm-12">
                                        <div class="form-group col-sm-6">
                                            <label asp-for="FirstName"></label>
                                            <input asp-for="FirstName" class="form-control" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            <label asp-for="LastName"></label>
                                            <input asp-for="LastName" class="form-control" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row col-sm-12">
                                            <div class="form-group col-sm-6">
                                            <label asp-for="Password">Password (or Default)</label>
                                            <input asp-for="Password" value ="Lexicon!0" class="form-control" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            <label asp-for="ConfirmPassword">Confirm Password (or Default)</label>
                                            <input asp-for="ConfirmPassword" value ="Lexicon!0"  class="form-control" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row col-sm-12">
                                        <div class="form-group col-sm-6">
                                            <label asp-for="Email"></label>
                                            <input asp-for="Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            <label asp-for="CourseId">Course</label><br />
                                            <select asp-for="CourseId" class="form-control" asp-items="ViewBag.List"></select>
                                            <span asp-validation-for="CourseId" class="text-danger"></span>
                                        </div>
                                    </div>
                                        <div class="form-group col">
                                            <button type="submit" class="btn btn-success">Register</button>
                                        </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


