@model MMTP_LMS.ViewModels.ModuleViewModel

@{
    ViewData["Title"] = "Module";
}

<div id="todays_header" class="thestyle">
    <span>Quick Start !</span>
        
</div>


<div class="container-fluid">
    <div id="createcourse_group" class="thestyle">
        @*<button type="button" class="btn btn-success" onclick="window.location.href = '/Teacher/Teacher';">Teacher</button>*@
        <a class="btn btn-success crtmodule_btn" data-toggle="collapse" href="#collapseForm" role="button" aria-expanded="true" aria-controls="collapseForm">Show Module form</a>
        @*<button type="button" class="btn btn-success" onclick="window.location.href = '/LmsActivities/CreateLmsActivity';">Activities</button>*@
        <button type="button" class="btn btn-success" onclick="window.location.href = '/LmsActivityTypes/Index';">Activitytypes</button>
        <button type="button" class="btn btn-success" onclick="window.location.href = '/Users/CreateUser';">Students</button>
        <a class="btn btn-danger" asp-controller="Teacher" asp-action="Teacher">Back to Quick start !</a>
        <div class="row">
            <div class="col">
                <div class="collapse multi-collapse" id="collapseForm">
                    <div class="card card-body">
                        <div class="row">
                            <div class="flex-xl-grow-1">
                                <form asp-action="CreateModule">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row col-sm-12">
                                        <div class="form-group col-sm-6">
                                            <label asp-for="ModuleName" class="control-label"></label>
                                            <input asp-for="ModuleName" class="form-control" />
                                            <span asp-validation-for="ModuleName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            <label asp-for="ModuleDescription" class="control-label"></label>
                                            <input asp-for="ModuleDescription" class="form-control" />
                                            <span asp-validation-for="ModuleDescription" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row col-sm-12">
                                        <div class="form-group col-sm-6">
                                            <label asp-for="ModuleStartDate" class="control-label"></label>
                                            <input asp-for="ModuleStartDate" class="form-control" />
                                            <span asp-validation-for="ModuleStartDate" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            <label asp-for="ModuleEndDate" class="control-label"></label>
                                            <input asp-for="ModuleEndDate" class="form-control" />
                                            <span asp-validation-for="ModuleEndDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group d-none">
                                        <label asp-for="CourseId" class="control-label">Course Name</label>
                                        <input asp-for="CourseId" class="form-control" />
                                        <span asp-validation-for="CourseId" class="text-danger"></span>
                                    </div>
                                    <div class="row col-sm-12">
                                        <div class="form-group col-sm-6">
                                            <input type="submit" value="Create" class="btn btn-success" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                        <partial name="ListModules" model="Model.Modules" />
